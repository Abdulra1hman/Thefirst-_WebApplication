@model IEnumerable<Department>

<a class="btn btn-primary btn-sm" href="@Url.Action("AddForm","Department")">GO TO ADD Department</a>

   <table class="table">
        <thead>

            <tr>
            <th scope="col">Id</th>
            <th scope="col">title</th>
            <th scope="col">description</th>
            <th scope="col">headOfDepartment</th>

            </tr>
        </thead>

        <tbody>
        @foreach(var x in Model)
        {
            <tr>
           <th scope="row">@x.Id</th>
           <td>@x.title</td>
           <td>@x.description</td>
           <td>@x.headOfDepartment</td>

           <td>
            <a class="btn btn-dark btn-sm" href="@Url.Action("EditForm","Department",new{id=x.Id})">Update</a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Department",new{id=x.Id})">Delete</a>
            <a class="btn btn-secondary btn-sm" href="@Url.Action("Index","Assigment",new{id=x.Id})">View Assigment</a>
           </td>

           </tr>
        }
            
        </tbody>

  </table>