@model IEnumerable<Student>

<a class="btn btn-primary btn-sm" href="@Url.Action("AddForm","Student")">GO TO ADD student</a>

<table class="table">
    <thead>

        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <th scope="row">@x.Id</th>
                <td>@x.Name</td>
                <td>@x.Email</td>
                <td>
                    <a class="btn btn-dark btn-sm" href="@Url.Action("UpdateForm","Student",new{id=x.Id})">Update</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Student",new{id=x.Id})">Delete</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("ViewTask","Student",new{id=x.Id})">View Task</a>
                </td>

            </tr>
        }

    </tbody>
</table>